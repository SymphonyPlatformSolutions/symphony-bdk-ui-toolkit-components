{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "jsx": "react",
    "rootDirs": [
      "stories"
    ],
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "stories/templates/*"
  ],
  "jsx": "react"
}