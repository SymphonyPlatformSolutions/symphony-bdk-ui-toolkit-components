{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "declaration": true,
    "outDir": "./dist/esm",
    "strict": true,
    "jsx": "react",
    "rootDirs": [
      "stories"
    ],
    "esModuleInterop": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "stories/templates/*"
  ],
  "jsx": "react"
}